{
  "manifest_version": 2,
  "name": "vk-messenger",
  "short_name": "vk-messenger",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "permissions": [
    "webview",
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
